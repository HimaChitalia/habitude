<%= form_for @goal, :as => :goal, :url => update_statuses_path(@habit.id, @goal.id), method: :patch do |f| %>
  <%= f.fields_for :statuses, @goal.statuses.build do |status_builder| %>
    <%= status_builder.label :description %>
    <%= status_builder.text_field :description %>
  <% end %><br>



  <%= f.submit "Add a current status of this goal!"%>
<% end %>
