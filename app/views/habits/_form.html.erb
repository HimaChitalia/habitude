<%= form_for(habit) do |f| %>
<%= render 'layouts/errors', form: habit %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <h4>Select a Category: </h4>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label class:"label-checkbox" do %>
         <%=b.check_box + b.text%>
        <%end%>
  <% end %>

  <br/> <br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
