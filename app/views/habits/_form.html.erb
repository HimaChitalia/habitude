<%= form_for(habit) do |f| %>
<%= render 'layouts/errors', form: habit %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  Select a Category:
  <%= f.collection_select :category_id, Category.order(:name),:id,:name %>
  <br/> <br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
