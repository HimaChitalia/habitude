
Name: <%= @habit.name %> <br> <br>
Description: <%= @habit.description %>  <br> <br>
Category: <%= @habit.category.name %>  <br> <br>

<% if @habit.goals.size == 0 %>
  Create goals for this habit!
<%  elsif @habit.goals.size == 1 %>
  Goal: <%=  @habit.goals.first.name %>
<% else %>
  Goals <br><br>
  <% @habit.goals.each.with_index(1) do |goal, index|%>
    <%= link_to "#{index}. #{goal.name}",  habit_goal_path(@habit.id, goal.id) %><br>
  <% end %> <br> <br>
<% end %>



